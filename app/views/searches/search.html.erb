
<%= render '/searches/search_form'%>


<h1>Books search for "test"</h1>

<table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th></th>
      <th></th>
      
      <th colspan="3"></th>
    </tr>
  </thead>
  
  <% if @range == "User" %>
    <tbody>
      <% @users.each do |user| %>
      <td><%= image_tag user.get_image, size: '50x50' %></td>
        <tr>
          <td><%= user.name %></td>
        </tr>
      <% end %>
    </tbody>
  <% else %>
    <tbody>
      <% @books.each do |book| %>
      
      
        <tr>
          <td><%= link_to(book.user) do %>
          <%= image_tag book.user.get_image, size:'50x50' %>
          <% end %>
        </td>
          <td><%= book.title %></td>
          <td><%= book.body %></td>
        </tr>
      <% end %>
    </tbody>
  <% end %>
</table>